@model IEnumerable<SummerBootCampTask.CoreModels.User>

<h2>Users</h2>

@using (Html.BeginForm())
{
<p>
    Find by user's identifier: @Html.TextBox("SearchString")
    <input type="submit" class="btn btn-outline-dark" value="Search" />
</p>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
            </th>
            <th>
            </th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <a asp-controller="Invitation" asp-action="Invite" asp-route-id="@item.Id" class="btn btn-success">Sent a friend request</a>
            </td>
        </tr>
    }
</table>
